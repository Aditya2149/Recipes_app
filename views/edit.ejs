<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Recipe</title>
</head>
<body>
  <h1>Edit Recipe</h1>
  <form action="/recipes/<%= recipe.id %>?_method=PUT" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= recipe.name %>" required><br>

    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="<%= recipe.description %>"><br>

    <label for="icon">Icon URL:</label>
    <input type="text" id="icon" name="icon" value="<%= recipe.icon %>"><br>

    <h3>Ingredients:</h3>
    <div id="ingredients">
      <% ingredients.forEach(function(ingredient, index) { %>
        <div class="ingredient">
          <label for="ingredient_name">Name:</label>
          <input type="text" name="ingredients[<%= index %>][name]" value="<%= ingredient.name %>" required><br>

          <label for="ingredient_icon">Icon URL:</label>
          <input type="text" name="ingredients[<%= index %>][icon]" value="<%= ingredient.icon %>" required><br>
        </div>
      <% }) %>
    </div>

    <h3>Steps:</h3>
    <div id="steps">
      <% steps.forEach(function(step, index) { %>
        <div class="step">
          <label for="step_title">Title:</label>
          <input type="text" name="steps[<%= index %>][title]" value="<%= step.title %>" required><br>

          <label for="step_description">Description:</label>
          <textarea name="steps[<%= index %>][description]" required><%= step.description %></textarea><br>
        </div>
      <% }) %>
    </div>

    <button type="submit">Update Recipe</button>
  </form>

  <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Recipe</button>
  </form>
</body>
</html>
